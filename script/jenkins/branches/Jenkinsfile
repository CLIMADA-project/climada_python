pipeline {
  agent any

  stages {
    stage('ci') {
      parallel {

        stage('lint') {
          steps {
            sh '''#!/bin/bash
            export PATH=$PATH:$CONDAPATH
            source activate climada_env
            rm -f pylint.log
            python -m pip install bayesian-optimization
            pylint -ry climada | tee pylint.log'''

            discoverGitReferenceBuild referenceJob: 'climada_branches/develop'
            recordIssues tools: [pyLint(pattern: 'pylint.log')]
          }
        }

        stage('unit_test') {
          steps {
            sh '''#!/bin/bash
            export PATH=$PATH:$CONDAPATH
            source activate climada_env
            python -m pip install pytest pytest-cov pytest-subtests
            rm -rf tests_xml/
            rm -rf coverage/
            python -m pip install bayesian-optimization
            make unit_test'''
          }
        }

      }
    }
  }

  post {
    always {
      junit 'tests_xml/*.xml'
      cobertura coberturaReportFile: 'coverage.xml'
    }
  }
}
